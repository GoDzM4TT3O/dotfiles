; temperature module
[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
;format-underline = #f50a4d
;format-underline = #bf616a
;format-underline = #81a1c1
format-underline = #88c0d0
format-warn = <ramp> <label-warn>
format-warn-underline = ${self.format-underline}

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.secondary}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.foreground-alt}

; date module
[module/date]
type = internal/date
; update seconds every 1 second
interval = 1

; for example Tue 26/05/2020 (day/month/year)
date = "%a %d/%m/%Y"
; for example Tuesday, 26 May 2020
date-alt = "%A, %d %B %Y"

; for example 19:50
time = %H:%M
; for example 19:50:15
time-alt = %H:%M:%S

# compact date example: Tue 26/05/2020 19:50
# full date example: Tuesday, 26 May 2020 19:50:15

format-prefix =   
format-prefix-foreground = ${colors.foreground-alt}
;format-underline = #0a6cf5
;format-underline = #5e81ac
;format-underline = #81a1c1
format-underline = #88c0d0

label = %date% %time%

; power menu module 
[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

label-open = 
label-open-foreground = ${colors.secondary}
label-close =  cancel
label-close-foreground = ${colors.secondary}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = sudo reboot

menu-2-0 = power off
menu-2-0-exec = sudo poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

