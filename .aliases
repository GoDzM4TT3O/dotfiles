# rename trans to translate
alias translate='trans'

# usage: tts "your text goes here"
# if you have some text in a foreign language, you can add the following to your text:
# "-from LANGUAGE". for example: tts "ciao prova" -from it
# uses mpv. change it to vlc if you'd like to use vlc
alias tts="echo $@ | translate -speak -player mpv -no-translate"

# vifm alias to preview images/videos
alias vifm='~/.config/vifm/vifmrun'

# update-grub alias (not present in arch linux by default)
# usually these commands are run after a kernel upgrade
# just to be sure, I'll run them too
alias update-grub='sudo mkinitcpio -P; sudo grub-mkconfig -o /boot/grub/grub.cfg'

# connect to wifi (I use the Arch Wiki's wpa_supplicant config)
alias wifi='sudo wpa_supplicant -Bi wlan0 -c /etc/wpa_supplicant/wpa_supplicant.conf; sudo dhcpcd wlan0'

# neofetch
# if we use st don't show distro logo
[[ $TERM = "st-256color" ]] && alias neofetch='neofetch --color_blocks off'

# if we use kitty use kitty backend and show custom distro logo
[[ $TERM = "xterm-kitty" ]] && alias neofetch='neofetch --color_blocks off --kitty archlogo.png'

# if we use urxvt use w3m backend and show custom distro logo
[[ $TERM = "rxvt-256color" ]] && alias neofetch='neofetch --color_blocks off --w3m archlogo.png'

# replace ls with exa
alias ls='exa --icons --group-directories-first'

# show ANSI color escapes and avoid line wrapping
alias less='less -RS'

# when I type too fast
alias vmi='vim'

# force kill a process
alias force-kill='killall -9 $1'

# rot13 encryption
alias rot13='tr a-zA-Z n-za-mN-ZA-M'

# use neovim instead of vim if nvim is installed
[[ -f "/usr/bin/nvim" ]] && alias vim="nvim" 

# make programs verbose
alias cp="cp -v"
alias mv="mv -v"
alias rm="rm -v"
alias ln="ln -v"
alias rsync="rsync -v"
